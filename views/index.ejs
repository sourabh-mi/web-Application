<body>

  <%- include('../partials/header.ejs')%>
   <section id="banner">
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                <h5><%=bannerrecord.title%></h5>
                <p><%=bannerrecord.disc%></p>
                <a href="/banner"><button class="btn btn-danger">More..</button></a>
            </div>
            <div class="col-md-4">
                <img src= "/upload/<%=bannerrecord.img%>"  class="img-fluid d-block mx-auto" alt="" id="banner-img">
            </div>

        </div>
    </div>
    <img src="media/border1.png" alt="">
   </section>
   <section id="services">
    <div class="container">
      <div class="row">
        <br><br>
        <h2>services</h2>
       
          <%serviceRecord.forEach((result)=>{%>
            <div class="col-md-3">
              <img src="/upload/<%=result.img%>" alt="">
            <h5><%=result.title%></h5>
            <p><%=result.disc%></p>
         <a href="/serviceMoreBTN"><button class="btn btn-success">More..</button></a>
          </div>
          <%})%>
         
   
      
      </div>
    </div>

   </section>
   <br><br>
   <section id="testi">
    <div class="container">
      <div class="row">
        <br><br>
        <h2>Testimonials <br><br></h2>
        <%testirecord.forEach((result)=>{%>
        <div class="col-md-3">
          <img src="/upload/<%=result.img%>"

          <p> <span><i class="bi bi-chat-left-quote"></i></span> <%=result.quotes%> <ut class="span"><i class="bi bi-chat-right-quote-fill"></i></ut></p>
           <h5><%=result.name%></h5>      
        </div>
      <%})%>

      </div>
    </div>

   </section>
   <%- include('../partials/footer.ejs')%>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>

</body>

</html>