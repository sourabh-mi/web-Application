<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="/admin/css/style.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
</head>
<body>
    
                       <%- include('../../partials/admin/header.ejs')%>
                     
                     
                      <div class="container">
                        <div class="row">
                            <div class="col-md-4"></div>
                        </div>
                       </div>
                       <section id="mid">
                                      
                                      <div class="conatiner">
                                        <div class="row">
                                            <%- include('../../partials/admin/left.ejs')%>
                                            <div class="col-md-8">
                                                <h2>Testimonials Management</h2>

                                                <table class="table table-hover">
                                                    <tr>
                                                        <th colspan="3"><h4>Dashboard</h4></th>
                                                    </tr>
                                                    <tr>
                                                        <td>TotalCount:<%=testicount%></td>
                                                        <td>Published:<%= publishedcount%></td>
                                                        <td>Unpublished:<%=unpublishedcount%></td>
                                                    </tr>
                                                </table>
                                                <form action="" method="post">
                                                    <label for="">Search By Testimonial status</label>
                                                   <select name="search" id="" class="form-select">
                                                    <option value="">Select status</option>
                                                    <option value="published">publish</option>
                                                    <option value="unpublished">unpublish</option>
                                                   </select>
                                                   <button type="submit" class=" btn btn-primary form-control mt-2 mb-4">Search</button>

                                                </form>
                                                
                                                <table class="table table-hover">
                                                    <tr>
                                                        <th>S.No</th>
                                                        <th>User Image</th>
                                                        <th>quotes</th>
                                                        <th>Name/Company</th>
                                                        <th>Posted Date</th>
                                                        <th>Status</th>
                                                        <th>delete</th>
                                                    </tr>
                                                    <%record.forEach((result,key)=>{%>
                                                        <tr>
                                                            <td><%=key+1%></td>
                                                            <td><img src="/upload/<%=result.img%>" alt=""></td>
                                                            <td><%=result.quotes%></td>
                                                            <td><%=result.name%></td>
                                                            <td><%=result.postedDate%></td>
                                                            <%if(result.status=='published'){%>
                                                            <td><a href="/admin/testistatusupdate/<%=result.id%>"><button class="btn btn-success"><%=result.status%></button></a></td>
                                                            <%}else{%>
                                                                <td><a href="/admin/testistatusupdate/<%=result.id%>"><button class="btn btn-danger"><%=result.status%></button></a></td>
                                                            <%}%>

                                                        
                                                           
                                                            <td><a href="/admin/testidelete/<%=result.id%>"><i class="bi bi-shield-x"></i></a></td>
                                                        </tr>
                                                  <%})%>
                                                  <%if(record.length==0){%>
                                                  <tr>
                                                    <td colspan="7"><h4>No Record Found</h4></td>
                                                  </tr>
                                                   <%}%>
                                                </table>
                                            </div>
                                        </div>
                                      </div>
                                    
                         </section>
                        
                      <%- include('../../partials/admin/footer.ejs')%>
</body>
</html>