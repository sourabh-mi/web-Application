<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="/admin/css/style.css">
</head>

<body>

    <%- include('../../partials/admin/header.ejs')%>
        <section id="mid">
            <div class="conatiner">
                <div class="row">
                    <%- include('../../partials/admin/left.ejs')%>
                        <div class="col-md-8">
                            <h2>Query Management</h2>


                            <table class="table table-hover ms-2">
                                <tr>
                                    <th>S.No</th>
                                    <th>User Query</th>
                                    <th>User Email</th>
                                    <th>Query Status</th>
                                    <th>Reply</th>
                                </tr>
                                <%record.forEach((result,key)=>{%>
                                    <tr>
                                        <td>
                                            <%=key+1%>
                                        </td>
                                        <td>
                                            <%=result.query%>
                                        </td>
                                        <td>
                                            <%=result.email%>
                                        </td>
                                        <td>
                                            <%=result.status%>
                                        </td>
                                        <%if(result.status=='Replied'){%>
                                            <td><a href="/admin/queryreply/<%=result.id%>"><button
                                                        disabled>Replied</button></a></td>
                                            <%}else{%>
                                                <td><a
                                                        href="/admin/queryreply/<%=result.id%>"><button>Reply</button></a>
                                                </td>

                                                <%}%>
                                    </tr>
                                    <%})%>
                            </table>
                        </div>
                </div>
            </div>
        </section>
        <%- include('../../partials/admin/footer.ejs')%>
</body>

</html>