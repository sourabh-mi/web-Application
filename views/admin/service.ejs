<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="/admin/css/style.css">
</head>
<body>
    
                       <%- include('../../partials/admin/header.ejs')%>
                        <section id="mid" >
                                      <div class="conatiner">
                                        <div class="row">
                                            <%- include('../../partials/admin/left.ejs')%>
                                            <div class="col-md-9"><h2 style="text-align: center;">Service Management</h2>

                                                <table class="table table-hover">
                                                    <tr>
                                                        <th colspan="3"><h5>Service Management</h5></th>
                                                    </tr>
                                                    <tr>
                                                        <td>Total Service:<%=tservice%></td>
                                                        <td> Published:<%=tpublished%></td>
                                                        <td>Unpublished:<%=tunpublished%></td>
                                                    </tr>
                                                </table>
                                                        
                                                <form action="" method="post">
                                                    <label for="">Select One Status</label>
                                                    <select name="search" id="" class="form-control ">
                                                        <option value="">Select Status</option>
                                                        <option value="published">Published</option>
                                                        <option value="unpublished">Unpublished</option>
                                                    </select>
                                                    <button type="submit" class=" form-control btn-secondary mt-2 mb-4">Search</button>
                                                </form>

                                               <a href="/admin/serviceadd"><button class="form-control btn btn-success">Add More Details</button></a>
                                                <table class="table table-hover">
                                                    <tr>
                                                        <th>S.No</th>
                                                        <th>Banner Title</th>
                                                        <th>Banner Description</th>
                                                        <th>Banner Image</th>
                                                         <th>Banner Moredetails</th>
                                                         <th>posted date</th>
                                                         <th>status</th>
                                                         <th>Action 1</th>
                                                       
                                                    </tr>
                                                    <%record.forEach((result,key)=>{%>
                                                        <tr>
                                                        <td><%=key+1%></td>
                                                        <td><%=result.title%></td>
                                                        <td><%=result.disc%></td>
                                                        <td ><img src="/upload/<%=result.img%>" alt="" ></td>
                                                        <td><%=result.moredetails%></td>
                                                        <td><%=result.postedDate%></td>
                                                        <%if(result.status=='published'){%>
                                                        <td><a href="/admin/servicestatusupdate/<%=result.id%>"><button class="btn btn-success"><%=result.status%></button></a></td>
                                                               <%}else{%>
                                                        <td><a href="/admin/servicestatusupdate/<%=result.id%>"><button class="btn btn-danger"><%=result.status%></button></a></td>
                                                           <%}%>
                                                        <td><a href="/admin/servicedelete/<%=result.id%>"><i class="bi bi-trash3-fill btn btn-info"></i></a></td>
                                                        
                                                    </tr>
                                                <%})%>
                                                <%if(record.length==0){%>
                                                    <tr>
                                                        <td colspan="6"><h4 class="text-center">No Record Found!</h4></td>
                                                    </tr>
                                                  
                                                <%}%>
                                                </table>
                                            </div>
                                        </div>
                                      </div>
                         </section>
                      <%- include('../../partials/admin/footer.ejs')%>

                    
                       
</body>
</html>